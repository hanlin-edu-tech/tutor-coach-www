.modal.modal-message
    .modal-con.modal-style
        .js-close-modal.flaticon-close
        .content-gift

// 獲得獎勵popup
.modal.modal-rewards
    .modal-con
        .js-close-modal.flaticon-close
        .modal-body.modal-body-award
            .title-congrats
                img.congrats-glow(src="./img/congrats-glow.png")
                img.congrats-deco(src="./img/title-deco.png")
                img.congrats-title(src="./img/title-get.png", alt="獲得獎勵")
            .wrap-award
                .item-award
                    img.img-award(src="./img/crystal/lv1.png", alt="獎勵圖")
                    .item-name-award 麥當勞
                    .item-message-award 兌換成功


// 審核結果popup
.modal.modal-result
    .modal-con
        .js-close-modal.flaticon-close
        .modal-body.modal-body-result
            .title-result 審核結果
            .wrap-result.self-study
                .item-result
                    .title 完成時間
                    .time 逾時完成
                .item-result
                    .title 認真程度
                    .serious 普通
                .item-result
                    .title 學習成就
                    .achievement 符合學生程度
            .wrap-result.tutor
                .item-result
                    .title 準時上課
                    .tutorTime 逾時到課
                .item-result
                    .title 專心程度
                    .concentrate 普通
                .item-result
                    .title 互動回答
                    .interactive 普通
            .reward-detail
                hr
                .title-result 獲得獎勵
                .wrap-award.wrap-result-award
                    .point-item-award
                        img.img-award(src="./img/ecoin.png", alt="獎勵圖")
                        .point-name-award
                        .point-number-award x1000
