        title 翰林雲端學院 - 線上學習首選 - 免費試用小中高課程

    body#testBasic
        //------  cookie -//
        eh-cookie
        //------ navbar -//
        eh-navbar
        //------ marquee -//
        eh-marquee
        //------ floatbtn -//
        eh-floatbtn
        .coach-container
            ol#ehanlin-navbar.navbar
                li.flaticon-header_curriculum
                    a(href="/app/coach") 學習課表
                li.flaticon-header_record
                    a(href="/app/coach/class-record.html") 課堂紀錄
                li.flaticon-header_mycourses
                    a(href="/my-course/my/owned/Courses.html") 我的課程
            .box.container-banner
                .title-bar.flaticon-header_curriculum  學習課表
                    .row-assets
                        a.btn-activity(href="/app/points-activity/currency-bank.html", target="_blank")
                            img.img-assets(src="./img/diamond.png", alt="")
                            h3.diamond 0
                            img.img-assets(src="./img/ecoin.png", alt="")
                            h3.ecoin 0
                        a.btn-activity(href="/app/points-activity/", target="_blank")
                            img(src="./img/btn-fairytale.png", alt="")
                img.banner(src="./img/bg-banner2.png", alt="")

                // 引入獎勵內容的 vue 模組
                include ./vue/vue-bonuses.pug

                .row-gift(id="bonus-received")
                    .gift-bg
                        img(src="./img/cont-gift-treasure.png", alt="")
                    .class-btn
                        // 領取獎勵按鈕
                        .btn-get(style="display:none")
                            img(src="./img/btn-get.png", alt="")
                        // 尚未達成按鈕
                        .btn-none
                            img(src="./img/btn-none.png", alt="")
                    .text-get-number(style="display:none") 可領
                        span.gift-get-number
                        span 次



            // 引入課程內容的 vue 模組
            include ./vue/vue-courses.pug

            // Banner
            include ./banner.pug

            // Banner
            include ./popup.pug

            // widget 引入 e 導師
            //include ./ecoach.pug

            // x-template of Vue Component
            include ./x-template/template-course.pug
            include ./x-template/template-bonus.pug
